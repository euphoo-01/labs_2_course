{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build-nasm",
			"type": "shell",
			"command": "bash",
			"args": [
				"-c",
				"nasm -f elf64 -g ${relativeFile} && ld -o ${relativeFileDirname}/${fileBasenameNoExtension} ${relativeFileDirname}/${fileBasenameNoExtension}.o"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		}
	]
}
